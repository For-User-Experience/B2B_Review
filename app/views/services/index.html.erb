<p id="notice"><%= notice %></p>

<h1>Services</h1>

<table>
  <thead>
    <tr>
      <th>Company number</th>
      <th>Name</th>
      <th>Image</th>
      <th>Value</th>
      <th>Price</th>
      <th>Starting cost</th>
      <th>Number of posts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.company_number %></td>
        <td><%= service.name %></td>
        <td><%= service.image %></td>
        <td><%= service.value %></td>
        <td><%= service.price %></td>
        <td><%= service.starting_cost %></td>
        <td><%= service.number_of_posts %></td>
        <td><%= link_to 'Show', service %></td>
        <td><%= link_to 'Edit', edit_service_path(service) %></td>
        <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

